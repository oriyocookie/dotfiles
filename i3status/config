general {
    interval = 5
	colors = true
#	color_good = '#88b090'
	color_good = '#21e014'
	color_degraded = '#ccdc90'
	color_bad = '#e89393'
	markup="pango"
}
#order += "screenshot"
order += "volume master"
order += "disk /"
#order += "disk /data"
#order += "disk /home"
#order += "run_watch DHCP"
#order += "ipv6"
#order += "run_watch VPN"
#order += "ethernet enp5s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "load"
order += "wireless wlp3s0"
order += "tztime local"

wireless wlp3s0 {
format_up = "%essid %ip"

   # format_up = " %essid %ip"
	format_down = " NO WIFI"
	on_click 1= "exec nm-connection-editor"

}

#ethernet enp5s0 {
#    # if you use %speed, i3status requires root privileges
#    format_up = "%ip (%speed)"
#    format_down = ""
#}

battery 0 {
    format = "%status %percentage %remaining"
	format_down = ""
	last_full_capacity = true
	integer_battery_capacity = true
	low_threshold = 11
	threshold_type = percentage
	hide_seconds = true
	status_chr = "<span color='#ffffff'></span>"
	status_bat = "<span color='#ffffff'></span>"
	status_unk = "<span color='#ffffff'></span>"
	status_full = "<span color='#ffffff'></span>"
}

run_watch DHCP {
    pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
    pidfile = "/var/run/vpnc/pid"
}

#%Y-%m-%d %H:%M:%S'
tztime local {
#format = " %A %d/%m/%Y   %H:%M"
    format = "📅 %A %d/%m/%Y  🕒 %H:%M"
	on_click 1="exec ~/.config/i3status/calshow.sh"
}

load {
format = "<span color='#ffffff'></span> %1min"

   # format = "📊 %1min"

}

cpu_usage {
    format = "<span color='#ffffff'></span> %usage"
	on_click 1="exec terminator -e htop"
}

cpu_temperature 0 {
 format = "<span color='#ffffff'></span> %degrees°C"
#    format = "🌡️ %degrees°C"
}

disk "/" {
format = "<span color='#ffffff'></span> <span color='#0cf2fd'>%avail</span>"

    #format = "📀%avail"
	prefix_type	= custom
	low_threshold = 20
	threshold_type = percentage_avail
	on_click 1= "exec nemo"

}

