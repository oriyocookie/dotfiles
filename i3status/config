volume master {
format = "%volume <span color='#ffffff'></span> "

#    format = "🔊 %volume"
format_muted = "<span color='#ffffff'></span>"

#	format_muted = "🔇"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	on_click 1="exec pavucontrol"

}
screenshot {
    format= "Screenshot"
	on_click 1="exec scrot" 
}
