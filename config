# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true 
#	color_good = "#66dd21"
#	color_bad = "#CC1616"
#	color_degraded = "#55858E"
	interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"

order += "volume master"
order += "wireless wlp3s0"
order += "battery 0"
order += "tztime local"

wireless wlp3s0 {
    format_up ="%essid%quality %ip"
	format_down = ""
}

battery 0 {
    format = "%status %percentage"
	status_chr="⚡CHR"
	status_bat = "🔋BAT"
	status_unk = "🤷BAT"
	status_full = "🙂BAT"
	low_threshold = 30
	threshold_type = percentage
	integer_battery_capacity = true
#	color_good = "#0000FF"
	last_full_capacity = true
}

cpu_temperature 0 {
    format = "🌡️ %degrees°C"
}

volume master {
    format = "🔊 %volume"
	format_muted = "🔇 %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
    format = "📅 %A-%d-%m-%Y ⌚ %H:%M"
}
cpu_usage {
    format = "🤖CPU %usage "
}
disk "/" {
        format = "📀%avail"
#	on_click 1= "exec nautilus"
}

